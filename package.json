{
  "name": "boxing-timer",
  "description": "A modern, responsive boxing timer application with beautiful UI and cross-platform support",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "author": "Boxing Timer Team",
  "homepage": "https://github.com/yourusername/boxing-timer#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/boxing-timer.git"
  },
  "keywords": [
    "boxing",
    "timer",
    "workout",
    "fitness",
    "preact",
    "typescript",
    "mobile",
    "pwa"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "build:appbundle": "cd android && ./gradlew bundleRelease",
    "android": "npm run build && cap sync android && cap run android",
    "ios": "npm run build && cap sync ios && cap run ios",
    "icons:generate": "capacitor-assets generate"
  },
  "dependencies": {
    "@capacitor/android": "^6.2.1",
    "@capacitor/cli": "^6.2.1",
    "@capacitor/core": "^6.2.1",
    "@capacitor/ios": "^6.2.1",
    "@capacitor/status-bar": "^6.0.2",
    "@danny270793/w3css": "^0.0.2",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@types/react-router-dom": "^5.3.3",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "preact": "^10.26.5",
    "react-i18next": "^16.0.0",
    "react-router-dom": "^7.9.3"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@preact/preset-vite": "^2.10.1",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  }
}
